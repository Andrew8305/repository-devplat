<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cisiondata.modules.system.dao.SensitiveWordDAO">

	<resultMap type="org.cisiondata.modules.system.entity.SensitiveWord" id="SensitiveResultMap">  
        <id property="id" column="ID"/>  
        <result property="word" column="WORD"/>
        <result property="type" column="TYPE"/> 
        <result property="identity" column="DELETE_FLAG"/>  
    </resultMap>
   
   	<!-- 查询所有敏感词 -->
    <select id="SensitiveAll"  resultMap="SensitiveResultMap">
    		select ID,WORD from T_SENSITIVE_WORD WHERE DELETE_FLAG=0 limit #{0},#{1};
    		<!-- SELECT ID,WORD,DELETE_FLAG FROM T_SENSITIVE_WORD where DELETE_FLAG=0 -->
    </select>
     <!--查询指定数据  -->
    <select id="FinID" parameterType="long" resultMap="SensitiveResultMap">
    		SELECT ID,WORD From  T_SENSITIVE_WORD where ID=#{id};
    </select>
    <!-- 验证数据的唯一性 -->
    <select id="Vserification" parameterType="String" resultType="int">
    		SELECT COUNT(WORD) FROM T_SENSITIVE_WORD where WORD=#{word};   
    </select>
    <!-- 修改数据 -->
     <update id="redupdate">
     		UPDATE T_SENSITIVE_WORD set WORD=#{0} where ID=#{1} AND DELETE_FLAG=0;
     </update>
     <!-- 增加 -->  
     <insert id="AddSensitive" parameterType="String">
     		insert into T_SENSITIVE_WORD(WORD)values(#{0});
     </insert>
     <!--删除数据 -->
     <update id="Sendelete" parameterType="long">
     	UPDATE T_SENSITIVE_WORD set DELETE_FLAG=1 where ID=#{id};
     </update>
     <!--查询条数  -->
     <select id="contun"   resultType="int">
     	select count(ID) from T_SENSITIVE_WORD where DELETE_FLAG=0;
     </select>
     <select id="findAll"  parameterType="String" resultMap="SensitiveResultMap">
     	select ID,WORD from T_SENSITIVE_WORD WHERE DELETE_FLAG=0;
     </select>
     
</mapper>