<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="org.cisiondata.modules.datainterface.dao.AccessSwitchDAO">

	<resultMap type="org.cisiondata.modules.datainterface.entity.AccessSwitch" id="AccessSwitchResultMap">  
        <id property="id" column="ID"/>
        <result property="switch_identity" column="SWITCH_IDENTITY"/> 
        <result property="switch_name" column="SWITCH_NAME"/> 
        <result property="swith_desc" column="SWITCH_DESC"/> 
        <result property="status" column="STATUS"/> 
    </resultMap>
 
	<!-- 查询所有 -->
	<select id="findAll" resultMap="AccessSwitchResultMap">
	 	select * from T_SWITCH
	</select>

	<!-- 添加   -->
	<insert id="saveSwitch" parameterType="org.cisiondata.modules.datainterface.entity.AccessSwitch">
		insert into T_SWITCH(SWITCH_IDENTITY,SWITCH_NAME,SWITCH_DESC,STATUS) values (#{switch_identity},#{switch_name},#{swith_desc},#{status})
	</insert>
	
	<!-- 根据ID修改  -->
	<update id="updateId" parameterType="org.cisiondata.modules.datainterface.entity.AccessSwitch">
		update T_SWITCH set SWITCH_IDENTITY=#{switch_identity},SWITCH_NAME=#{switch_name},SWITCH_DESC=#{swith_desc},STATUS=#{status} where id=#{id}
	</update>
	
	<!-- 根据ID删除 -->
	<delete id="deleteIdentity" parameterType="String">
		delete from T_SWITCH where SWITCH_IDENTITY = #{identity}
	</delete>
	
	<!-- 批量修改 -->
	<update id="updateIdStatus" parameterType="org.cisiondata.modules.datainterface.entity.AccessSwitch">
		update T_SWITCH set STATUS=#{status} where id=#{id}
	</update>
</mapper>