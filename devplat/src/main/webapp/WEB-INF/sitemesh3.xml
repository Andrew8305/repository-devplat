<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
     <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
     <mapping path="/*" decorator="/WEB-INF/views/decorators/decorator.jsp" />
 
     <!-- 指明满足“/exclude*”的页面，将被排除，不被装饰 -->
     <mapping path="/login" exclue="true" />
     <mapping path="/exclude*" exclue="true" />
     <mapping path="/admin/*" exclue="true" />
     <mapping path="/statistics" exclue="true" />
     <mapping path="/organization*" exclue="true" />
     <mapping path="/roles" exclue="true" />
</sitemesh>